{% extends 'base.html.twig' %}

{% block title %}Liste des Composants{% endblock %}

{% block body %}
<main class="container mt-5">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Nom</th>
                <th scope="col">Marque</th>
                <th scope="col">Prix</th>
                <th scope="col">Type</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        {% set i = 1 %}
        {% for component in components %}
            <tr>
                <th scope="row">{{ i }}</th>
                <td>{{ component.name }}</td>
                <td>{{ component.brand }}</td>
                <td>{{ component.price /100 }} â‚¬</td>
                <td>{{ component.type }}</td>
                <td>
                    <a href=" {{ path('component_edit', {id : component.id,}) }}" class="btn btn-primary">Modifier</a>
                    <a href=" {{ path('component_remove', {id : component.id,}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
            {% set i = i + 1 %}
        {% endfor %}

     </table>

    <a href=" {{ path('component_new') }}" class="btn btn-success">Ajouter un composant</a>
</main>
{% endblock %}


