                <!--liens-->
                <div class="col-12 col-sm-5">
                    <ul class="nav justify-content-center justify-content-md-end">
                        <!--Ordinateur-->
                        <li>
                            <a href="{{ path('computer_index') }}">Ordinateurs</a>
                        </li>
                        <!--Composant-->
                        <li class="mx-3">
                            <a href="{{ path('component_index') }}">Composants</a>
                        </li>
                        <!--Périphérique-->
                        <li>
                            <a href="{{ path('device_index') }}">Périphériques</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
{% endblock %}
{% block body %}{% endblock %}
